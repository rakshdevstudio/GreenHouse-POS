{
  "name": "greenhouse-pos-desktop",
  "version": "1.0.1",
  "description": "Greenhouse POS Desktop Application with Weighing Scale Support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder --win --x64",
    "build:win": "electron-builder --win --x64",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["pos", "greenhouse", "retail", "weighing-scale"],
  "author": "Raksh Dev Studio",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron-updater": "^6.6.2",
    "serialport": "^13.0.0",
    "@serialport/parser-readline": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.greenhouse.pos",
    "productName": "Greenhouse POS",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "rakshdevstudio",
      "repo": "GreenHouse-POS",
      "releaseType": "release"
    }
  }
}